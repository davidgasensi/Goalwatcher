---
import Layout from '../../layouts/Layout.astro'
export async function getStaticPaths() {
  const response = await fetch('https://goalwatcher.davidasensi.workers.dev/teams')
	const teams = await response.json()
  return teams.map(team => ({
    params: { teamId: team.id },
    props: { ...team }
  }))
}

const {
	name, 
	image, 
	id, 
	urlWeb, 
	socialNetworks, 
	players
} = Astro.props
---

<Layout title={name} description={`Página del equipo ${name}`}>
	<div class="container m-auto my-8">

		<section class="flex items-center justify-between">
			<div class="flex items-center gap-x-12">
				<img src={image} alt={`Escudo del equipo ${name}`} width="130"  height="130" />
				<h1 class="font-bold text-5xl">{name}</h1>
			</div>
				Twitch

		</section>

		<section class="my-2">
			<ul>
				
				<li><b>Jugadores:</b> {players.length}</li>
			</ul>			
		</section>

		<section class="my-2">
			Estadísticas
		</section>

		<a class="text-blue-500 underline" href="/">Volver</a>
	</div>
</Layout>